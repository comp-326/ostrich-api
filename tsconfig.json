{
  "compileOnSave": false,
  "ts-node": {
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"]
  },
  "compilerOptions": {
     "types": ["node", "jest"],
     "plugins": [
       {
         "transform": "typescript-transform-paths",
         "exclude": ["**/node_modules/**"]
       },
       {
         "transform": "typescript-transform-paths",
         "afterDeclarations": true,
         "exclude": ["**/node_modules/**"]
       }
     ],
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@ostrich/*" : ["./*"],
      "@ostrich-base/*": ["./src/*"],
      "@ostrich-config": ["./src/config"],
      "@ostrich-api/*": ["./src/api/*"],
      "@ostrich-setup": ["./src/setup"],
      "@ostrich-domains/*": ["./src/domains/*"],
      "@ostrich-models/*": ["./src/models/*"],
      "@ostrich-common/*": ["./src/common/*"],
      "@ostrich-services/*": ["./src/Services/*"],
      "@ostrich-helpers/*": ["./src/helpers/*"],
      "@ostrich-utils/*": ["./src/utils/*"],
      "@ostrich-constants/*": ["./src/constants/*"],
      "@ostrich-db": ["./src/db"],
      "@ostrich-middlewares/*": ["./src/middlewares/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts",".", "gulpfile.ts"]
}
