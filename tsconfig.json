{
  "compileOnSave": false,
  "ts-node": {
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"]
  },
  "compilerOptions": {
     "types": ["node", "jest"],
     "plugins": [
       {
         "transform": "typescript-transform-paths",
         "exclude": ["**/node_modules/**"]
       },
       {
         "transform": "typescript-transform-paths",
         "afterDeclarations": true,
         "exclude": ["**/node_modules/**"]
       }
     ],
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@ostrich-app/*": ["./src/*"],
      "@ostrich-app/config": ["./src/config"],
      "@ostrich-app/api/*": ["./src/api/*"],
      "@ostrich-app/setup": ["./src/setup"],
      "@ostrich-app/setup/*": ["./src/setup/*"],
      "@ostrich-app/scripts/tasks/*": ["./src/scripts/tasks/*"],
      "@ostrich-app/features/*": ["src/features/*"],
      "@ostrich-app/models/*": ["./src/models/*"],
      "@ostrich-app/common/*": ["./src/common/*"],
      "@ostrich-app/services/*": ["./src/services/*"],
      "@ostrich-app/helpers/*": ["./src/helpers/*"],
      "@ostrich-app/utils/*": ["./src/utils/*"],
      "@ostrich-app/constants/*": ["./src/constants/*"],
      "@ostrich-app/upload": ["./src/uploadSDK"],
      "@ostrich-app/db/*": ["./src/databases/*"],
      "@ostrich-app/db/mongodb": ["./src/databases/mongodb"],
      "@ostrich-app/middlewares/*": ["./src/middlewares/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts",".", "gulpfile.ts"]
}
